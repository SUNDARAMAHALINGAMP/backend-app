node {
    stage('Clone Repository') {
        git branch: 'main', url: 'https://github.com/your-username/your-repo.git'
    }

    stage('Build Docker Image') {
        script {
            dockerImage = docker.build("your-username/backend-app:latest")
        }
    }

    stage('Run Container') {
        script {
            sh "docker run -d -p 3000:3000 --name backend-app your-username/backend-app:latest"
        }
    }
}

